# Docker Development Environment Configuration
# This file is used by docker-compose.dev.yml for development containers

# API Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (Docker internal network - Development)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nvn_backend_dev
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nvn_backend_dev

# Redis Configuration (Docker internal network - No password in dev)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration (Docker internal network)
RABBITMQ_URL=amqp://rabbitmq:rabbitmq@rabbitmq:5672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbitmq
RABBITMQ_PASSWORD=rabbitmq

# JWT Configuration (Development - Not secure)
JWT_SECRET=development-jwt-secret-not-for-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=development-refresh-secret-not-for-production
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api/v1
API_VERSION=1.0.0

# Logging (Verbose for development)
LOG_LEVEL=debug
LOG_FILE=/app/logs/app-dev.log

# Email Configuration (Docker internal - Mailhog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@nvn-dev.com

# Security (Relaxed for development)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_RABBITMQ=true

# Development specific
DOCKER_ENVIRONMENT=development
DEBUG_MODE=true
HOT_RELOAD=true
