# Docker Environment Configuration
# This file is used by docker-compose for container environments

# Application Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Docker services)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/nvn_backend
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nvn_backend

# Redis Configuration (Docker service)
REDIS_URL=redis://:redis123@redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# RabbitMQ Configuration (Docker service)
RABBITMQ_URL=amqp://rabbitmq:rabbitmq@rabbitmq:5672
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbitmq
RABBITMQ_PASSWORD=rabbitmq

# JWT Configuration
JWT_SECRET=production-super-secret-jwt-key-change-in-production-32chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=production-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security Keys Configuration
SECURITY_MASTER_KEY=production-master-key-2024-nvn-backend-super-secret-encryption-key-change-in-production-64chars

# API Configuration
API_PREFIX=api
API_VERSION=1.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@nvn.com

# Security
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_RABBITMQ=true

# Docker specific
DOCKER_ENVIRONMENT=true

# PostgreSQL Environment Variables
POSTGRES_DB=nvn_backend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
PGDATA=/var/lib/postgresql/data/pgdata

# Redis Environment Variables
# Redis configuration is handled in docker-compose command

# RabbitMQ Environment Variables
RABBITMQ_DEFAULT_USER=rabbitmq
RABBITMQ_DEFAULT_PASS=rabbitmq
RABBITMQ_DEFAULT_VHOST=/

# Swagger Configuration
SWAGGER_TITLE=NVN API
SWAGGER_DESCRIPTION=NVN Backend API Documentation
SWAGGER_VERSION=1.0
