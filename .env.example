# Local Development Environment Configuration
# Copy this file to .env and customize for your local development
NODE_ENV=development
PORT=3000

# Database Configuration (Local services)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nvn_backend
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=nvn_database

# Redis Configuration (Local service)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration (Local service)
RABBITMQ_URL=amqp://rabbitmq:rabbitmq@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbitmq
RABBITMQ_PASSWORD=rabbitmq

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PREFIX=api/v1
API_VERSION=1.0.0

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@nvn.com

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_RABBITMQ=true

# Swagger Configuration
SWAGGER_TITLE=NVN API Documentation
SWAGGER_DESCRIPTION=API Documentation for NVN Backend
SWAGGER_VERSION=1.0
