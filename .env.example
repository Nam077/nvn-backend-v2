# Local Development Environment Configuration
# Copy this file to .env and customize for your local development
NODE_ENV=development
PORT=3011

# Database Configuration (Local services)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# Redis Configuration (Local service)
REDIS_URL=redis://username:password@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# RabbitMQ Configuration (Local service)
RABBITMQ_URL=amqp://username:password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=your_rabbitmq_username
RABBITMQ_PASSWORD=your_rabbitmq_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d

# Security Keys Configuration
SECURITY_MASTER_KEY=your-super-secret-master-encryption-key-minimum-64-characters-required

# API Configuration
API_PREFIX=api
API_VERSION=1.0.0

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (Development)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@yourapp.com

# Security
CORS_ORIGIN=https://yourfrontend.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Health Check
HEALTH_CHECK_DATABASE=true
HEALTH_CHECK_REDIS=true
HEALTH_CHECK_RABBITMQ=true

# Swagger Configuration
SWAGGER_TITLE=Your API
SWAGGER_DESCRIPTION=Your API Documentation
SWAGGER_VERSION=1.0
